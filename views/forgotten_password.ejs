<%- include('header') %>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 bg" style="width: 350px;">
            <h3 class="text-center mb-3">Forgot Password</h3>
            <p class="text-center">Enter your username, and we will send you a new password.</p>
            <form action ="/forgot_password" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                </div>
                <button type="submit" class="btn btn-dark w-100">Send New Password</button>
            </form>
            <div class="text-center mt-3">
                <a href="/login" class="text-decoration-none text-dark">Back to Login</a>
            </div>
        </div>
    </div>
<%- include('footer') %>