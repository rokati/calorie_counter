<%- include('header') %>
<%- include('navbar') %>
    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <div class="col-2">
                <!-- Buttons -->
                <div class="container mb-4">
                    <div class="row mb-4">
                        <button class="btn btn-dark me-2" onclick="location.href = '/ingredient'">Create New Ingredient</button>
                    </div>
                    <div class="row mb-4">
                        <button class="btn btn-dark me-2" onclick="location.href = '/reciept/new'">Create New Receipt</button>
                    </div>
                    <div class="row">
                        <button class="btn btn-dark" onclick="location.href = '/meal'">Add Meal</button>
                    </div>
                </div>
            </div>
            <div class="col-5">
            <!-- Today's Summary -->
                <div class="card bg text-dark p-3 mb-4">
                    <h4 class="text-center">Today's Summary</h4>
                    <div class="card bg p-3 my-2">
                        <h5>Calories consumed</h5>
                        <p><%= user.goal_calories %>/<%= user.consumed_calories %> kcal</p>
                    </div>
                    <div class="card bg p-3 my-2">
                        <h5>Carbs consumed</h5>
                        <p><%= user.consumed_carbs %> g</p>
                    </div>
                    <div class="card bg p-3 my-2">
                        <h5>Protein consumed</h5>
                        <p><%= user.consumed_proteins %> g</p>
                    </div>
                    <div class="card bg p-3 my-2">
                        <h5>Fat consumed</h5>
                        <p><%= user.consumed_fats %> g</p>
                    </div>
                </div> 
            </div>
            <div class="col-5">
                <!-- Today's Meals -->
                <div class="card bg text-dark p-3">
                    <h4 class="text-center">Today's Meals</h4>
                    <% for (let meal of userMeals) { %>
                        <div class="card bg p-3 my-2">
                            <h5><%= meal.name %></h5>
                            <p><%= meal.calories %> kcal</p>
                        </div>
                    <% } %>
                    <% if (userMeals.length === 0) { %>
                        <div class="card bg p-3 my-2">
                            <p>No meals added yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') %>