<%- include('header') %>
<%- include('navbar') %>

    <!-- Main Content -->
    <div class="container mt-4 d-flex justify-content-center align-items-center">
        <div class="card shadow-lg p-4 text-ce" style="width: 350px;">
            <h3 class="text-center mb-4">Add meal</h3>
            <form action="/meal/add" method="POST">
                <select class="form-select mb-3" name="_receiptId" aria-label="Default select example">
                    <option selected>Select a meal</option>
                    <% receipts.forEach(function(receipt) { %>
                        <option value="<%= receipt._id %>"><%= receipt.name %></option>
                    <% }); %>
                </select>
                <button type="submit" class="btn btn-dark w-100">Add meal</button>
            </form>
        </div>
    </div>

<%- include('footer') %>
